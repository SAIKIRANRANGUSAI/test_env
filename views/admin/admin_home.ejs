                                <label for="services_heading">Services Heading</label>
                                <div class="input-wrapper">
                                    <input type="text" id="services_heading" name="services_heading"
                                        value="<%= data ? data.services_heading : '' %>"
                                        placeholder="Empowering You with Loan Knowledge and Comparison Tools"
                                        maxlength="80" required>
                                    <span class="char-counter">0/80</span>
                                </div>
                                <div class="form-hint">Recommended: 60‚Äì80 characters</div>
                            </div>

                            <!-- Services Description -->
                            <div class="form-group">
                                <label for="services_description">Services Description</label>
                                <div class="input-wrapper">
                                    <textarea id="services_description" name="services_description" rows="5"
                                        placeholder="We are dedicated to providing valuable services that simplify your loan search and empower informed borrowing decisions."
                                        maxlength="300" required><%= data ? data.services_description : '' %></textarea>
                                    <span class="char-counter">0/300</span>
                                </div>
                                <div class="form-hint">Recommended: 200‚Äì300 characters</div>
                            </div>
                        </section>

                        <!-- Home Counts Section -->
                        <section class="form-section" data-section="home-counts">
                            <div class="section-header">
                                <h2 class="section-title">Homepage Counts Section</h2>
                                <p class="section-description">Update the homepage counters: Total Services, Customer
                                    Satisfaction, Compare Loan, Awards Won.</p>
                            </div>

                            <% const counts=homeCounts || {}; %>

                                <!-- Total Services Loan -->
                                <div class="counts-group">
                                    <h3 class="counts-subtitle">Total Services</h3>
                                    <div class="form-group">
                                        <label for="total_services_heading">Total Services Heading</label>
                                        <div class="input-wrapper">
                                            <input type="text" id="total_services_heading" name="total_services_heading"
                                                value="<%= counts.total_services_heading || '' %>"
                                                placeholder="Total Services Loan" maxlength="50" required>
                                            <span class="char-counter">0/50</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="total_services_number">Total Services Number</label>
                                        <div class="input-wrapper">
                                            <input type="number" id="total_services_number" name="total_services_number"
                                                value="<%= counts.total_services_number || '' %>" placeholder="1"
                                                required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="total_services_image">Total Services Image</label>
                                        <div class="image-upload-wrapper">
