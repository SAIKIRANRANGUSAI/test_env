                                                <div class="image-preview">
                                                    <img src="<%= counts.total_services_image %>"
                                                        alt="Total Services Image">
                                                </div>
                                                <% } else { %>
                                                    <div class="image-placeholder">
                                                        <span class="placeholder-icon">üì∑</span>
                                                        <p>No image selected</p>
                                                    </div>
                                                    <% } %>
                                                        <input type="file" id="total_services_image"
                                                            name="total_services_image" accept="image/*">
