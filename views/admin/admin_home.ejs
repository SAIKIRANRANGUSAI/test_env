                                    </div>
                                    <div class="form-group">
                                        <label for="customer_satisfaction_image">Customer Satisfaction Image</label>
                                        <div class="image-upload-wrapper">
                                            <% if (counts.customer_satisfaction_image) { %>
                                                <div class="image-preview">
                                                    <img src="<%= counts.customer_satisfaction_image %>"
                                                        alt="Customer Satisfaction Image">
                                                </div>
                                                <% } else { %>
                                                    <div class="image-placeholder">
                                                        <span class="placeholder-icon">üì∑</span>
                                                        <p>No image selected</p>
                                                    </div>
                                                    <% } %>
                                                        <input type="file" id="customer_satisfaction_image"
                                                            name="customer_satisfaction_image" accept="image/*">
                                                        <small class="image-hint">Recommended: 120 √ó 120 px</small>
                                        </div>
                                    </div>
                                </div>

                                <!-- Compare Loan -->
                                <div class="counts-group">
                                    <h3 class="counts-subtitle">Compare Loan</h3>
                                    <div class="form-group">
                                        <label for="compare_loan_heading">Compare Loan Heading</label>
                                        <div class="input-wrapper">
                                            <input type="text" id="compare_loan_heading" name="compare_loan_heading"
                                                value="<%= counts.compare_loan_heading || '' %>"
                                                placeholder="Compare Loan" maxlength="50" required>
                                            <span class="char-counter">0/50</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="compare_loan_number">Compare Loan Number</label>
                                        <div class="input-wrapper">
                                            <input type="number" id="compare_loan_number" name="compare_loan_number"
                                                value="<%= counts.compare_loan_number || '' %>" placeholder="1000"
                                                required>
                                        </div>
                                        <small class="form-text text-muted">
    Please enter numbers only (e.g., 1, 2, 3). The ‚Äúk‚Äù (for thousand) will be added automatically on the frontend.
  </small>
                                    </div>
                                    <div class="form-group">
                                        <label for="compare_loan_image">Compare Loan Image</label>
                                        <div class="image-upload-wrapper">
                                            <% if (counts.compare_loan_image) { %>
                                                <div class="image-preview">
                                                    <img src="<%= counts.compare_loan_image %>"
                                                        alt="Compare Loan Image">
                                                </div>
                                                <% } else { %>
                                                    <div class="image-placeholder">
                                                        <span class="placeholder-icon">üì∑</span>
                                                        <p>No image selected</p>
                                                    </div>
                                                    <% } %>
                                                        <input type="file" id="compare_loan_image"
                                                            name="compare_loan_image" accept="image/*">
                                                        <small class="image-hint">Recommended: 120 √ó 120 px</small>
                                        </div>
                                    </div>
                                </div>

                                <!-- Awards Won -->
                                <div class="counts-group">
                                    <h3 class="counts-subtitle">Awards Won</h3>
                                    <div class="form-group">
                                        <label for="awards_won_heading">Awards Won Heading</label>
                                        <div class="input-wrapper">
                                            <input type="text" id="awards_won_heading" name="awards_won_heading"
                                                value="<%= counts.awards_won_heading || '' %>" placeholder="Awards Won"
                                                maxlength="50" required>
                                            <span class="char-counter">0/50</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="awards_won_number">Awards Won Number</label>
